<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/notification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_image_view"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_first_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00796B"
                android:textStyle="bold|normal"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/notification_second_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_date_text_view"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="10sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/notification_accept_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    android:textColor="#2e7d32"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:theme="@style/app_button_highlight"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/notification_ignore_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:textColor="#2e7d32"
                    android:visibility="gone"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:textSize="10sp"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_toLeftOf="@id/notification_ignore_text_view"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>